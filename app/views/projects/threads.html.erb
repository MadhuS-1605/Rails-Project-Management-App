<div class="change-padding" style="margin-top:30px">
    <div class="row">
        <%= render "links/links", :locals => {:active => 'threads'} %>
        <div class="col-md-9 bg-white right-part">
            <h3>List of Threads in <%= @project.title %></h3>
            <%= link_to "Add New Thread", users_path + "/projects/thread/create/#{@project.projectid}", :class => 'btn btn-sm btn-secondary'  %>
            <% flash.each do |type, msg| %>
                <% if type == 'success' %>
                    <div class="alert alert-success"><%= msg %></div>
                <% elsif type == 'error' %>
                    <div class="alert alert-danger"><%= msg %></div>
                <% else %>
                    <div class="alert alert-info"><%= msg %></div>
                <% end %>
            <% end %>
            <br>
            <table class="table">
                <thead>
                    <tr>
                    <th scope="col">#</th>
                    <th scope="col">Topic</th>
                    <th scope="col">Description</th>
                    <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% count = 0 %>
                    <% if @project_threads != nil %>
                    <% @project_threads.each do |project_thread| %>
                    <tr>
                    <th scope="row"><%= count += 1 %></th>
                    <td><%= project_thread.topic %></td>
                    <td><%= project_thread.description %></td>
                    <td>
                        <%= link_to "Update Thread", request.fullpath + "/#{project_thread.thread_id}/update", :class => 'btn btn-sm btn-secondary' %>
                        <%= link_to "Delete Thread", request.fullpath  + "/#{project_thread.thread_id}/delete", data: {confirm: "Are you sure you want to delete this thread from this project?"}, :class => 'btn btn-sm btn-danger' %>
                    </td>
                    </tr>
                    <% end %>
                    <% end %>
                </tbody>
            </table>
            <%# pagy_nav(@pagy).html_safe %>
        </div>
    </div>
</div>